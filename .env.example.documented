# ================================================
# WRK Platform Environment Variables
# ================================================
# Copy this file to .env.local and update values
# DO NOT commit .env.local to version control
# ================================================

# ================================================
# DATABASE
# ================================================
# SQLite for development (use file:./dev.db)
# PostgreSQL for production (postgresql://user:pass@host:5432/dbname)
DATABASE_URL="file:./dev.db"

# ================================================
# AUTHENTICATION (NextAuth v5)
# ================================================
# Generate secret with: openssl rand -base64 32
# REQUIRED in production, optional in development
NEXTAUTH_SECRET="your-secret-key-at-least-32-characters-long"

# The URL of your application
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"

# ================================================
# STRIPE PAYMENTS (Not yet implemented)
# ================================================
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs for subscription plans
STRIPE_PRICE_STARTER="price_..."
STRIPE_PRICE_PROFESSIONAL="price_..."
STRIPE_PRICE_ENTERPRISE="price_..."

# ================================================
# AWS S3 STORAGE (Not yet implemented)
# ================================================
# For file uploads and asset storage
S3_BUCKET="wrk-platform-assets"
S3_REGION="ap-southeast-2"
S3_ACCESS_KEY_ID="AKIA..."
S3_SECRET_ACCESS_KEY="..."

# CloudFront distribution (optional)
CLOUDFRONT_URL="https://d1234567890.cloudfront.net"

# ================================================
# EMAIL SERVICE (Not yet implemented)
# ================================================
# SendGrid, Resend, or other email service
EMAIL_SERVER_HOST="smtp.sendgrid.net"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="apikey"
EMAIL_SERVER_PASSWORD="SG...."
EMAIL_FROM="noreply@wrk.ph"

# ================================================
# REAL-TIME UPDATES (Not yet implemented)
# ================================================
# Pusher for real-time features
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="ap1"

# Next.js public variables (accessible in browser)
NEXT_PUBLIC_PUSHER_KEY=""
NEXT_PUBLIC_PUSHER_CLUSTER="ap1"

# ================================================
# APPLICATION CONFIGURATION
# ================================================
# App name and URL for emails and metadata
NEXT_PUBLIC_APP_NAME="Work"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Environment: development, staging, production
NODE_ENV="development"

# ================================================
# MONITORING & ANALYTICS (Optional)
# ================================================
# Sentry error tracking
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# Google Analytics
NEXT_PUBLIC_GA_ID="G-..."

# Plausible Analytics (privacy-friendly alternative)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=""

# ================================================
# FEATURE FLAGS (Optional)
# ================================================
# Enable/disable features
ENABLE_SIGNUP="true"
ENABLE_OAUTH="false"
ENABLE_PAYMENTS="false"
ENABLE_FILE_UPLOAD="false"
ENABLE_REAL_TIME="false"
ENABLE_EMAIL_NOTIFICATIONS="false"

# ================================================
# RATE LIMITING (Not yet implemented)
# ================================================
# Redis connection for rate limiting
REDIS_URL="redis://localhost:6379"
RATE_LIMIT_WINDOW="60" # seconds
RATE_LIMIT_MAX_REQUESTS="100"

# ================================================
# EXTERNAL APIS (Optional)
# ================================================
# OpenAI for AI features
OPENAI_API_KEY="sk-..."

# Google Maps for location features
GOOGLE_MAPS_API_KEY=""

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ================================================
# DEVELOPMENT TOOLS
# ================================================
# Enable debug mode
DEBUG="false"

# Database query logging
LOG_QUERIES="false"

# API request/response logging
LOG_API_CALLS="false"

# ================================================
# NOTES
# ================================================
# 1. Never commit .env.local or any file with real secrets
# 2. Use different values for development/staging/production
# 3. Rotate secrets regularly
# 4. Use strong, unique passwords
# 5. Enable 2FA on all service accounts
# ================================================